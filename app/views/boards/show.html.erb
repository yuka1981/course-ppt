
<div class="row">
  <div class="title mx-auto text-center my-3">
    <h2>看板： <%= @board.title %></h2>
  </div>
</div>

<div class="row">
  <%= link_to "新增文章", new_board_post_path(@board), class: "btn btn-info btn-sm mt-3" %>
</div>

<div class="row">
  <table class="table table-hover my-3">
    <thead class="thead">
      <tr>
        <th>文章</th>
        <th>功能</th>
      </tr>
    </thead>
    
    <tbody>
      <% @board.posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post.title, post_path(post) %>
        </td>
        <td>
          <%= link_to '編輯', edit_post_path(post), class: "btn btn-primary btn-sm" %>
          <%= link_to '刪除', post_path(post), method: 'delete', data: {confirm: 'are you sure?'}, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>

<div class="row">
  <%= link_to "回看版列表", boards_path, class: "btn btn-sm btn-success" %>
</div>
